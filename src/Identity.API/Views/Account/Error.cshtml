@page "/Views/Account/Error"
@model Identity.API.Views.Account.ErrorModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Identity Server</title>
    <link rel="stylesheet" href="~/Views/Shared/styles.css" />
    <style>
        .error-details {
            background-color: #f8f9fa;
            border-left: 4px solid #dc3545;
            padding: 20px;
            margin: 20px 0;
            border-radius: 4px;
        }
        .error-code {
            font-family: monospace;
            background-color: #e9ecef;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 14px;
        }
        .icon-error {
            color: #dc3545;
            font-size: 48px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="logo">
                <h1>Identity Server</h1>
                <p>Authentication Error</p>
            </div>

            <div id="main-content">
                <div class="icon-error" style="text-align: center;">??</div>

                <div class="consent-info">
                    <h2>@Model.ErrorTitle</h2>
                    <p>@Model.ErrorDescription</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="error-details">
                        <h4>Error Details</h4>
                        <p><strong>Error Code:</strong> <span class="error-code">@Model.Error</span></p>
                        @if (!string.IsNullOrEmpty(Model.ErrorDescription))
                        {
                            <p><strong>Description:</strong> @Model.ErrorDescription</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.ErrorUri))
                        {
                            <p><strong>More Information:</strong> <a href="@Model.ErrorUri" target="_blank">@Model.ErrorUri</a></p>
                        }
                    </div>
                }

                @if (Model.ShowTechnicalDetails)
                {
                    <details style="margin-top: 20px;">
                        <summary style="cursor: pointer; color: #6c757d;">Technical Details</summary>
                        <div class="error-details" style="margin-top: 10px;">
                            @if (!string.IsNullOrEmpty(Model.RequestId))
                            {
                                <p><strong>Request ID:</strong> <span class="error-code">@Model.RequestId</span></p>
                            }
                            @if (!string.IsNullOrEmpty(Model.State))
                            {
                                <p><strong>State:</strong> <span class="error-code">@Model.State</span></p>
                            }
                            <p><strong>Timestamp:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
                        </div>
                    </details>
                }

                <div class="button-group" style="margin-top: 30px;">
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <a href="@Model.ReturnUrl" class="btn btn-primary">Try Again</a>
                    }
                    else
                    {
                        <a href="/login" class="btn btn-primary">Back to Login</a>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.HomeUrl))
                    {
                        <a href="@Model.HomeUrl" class="btn btn-secondary">Go Home</a>
                    }
                </div>

                <div class="links" style="margin-top: 20px;">
                    <small>
                        If you continue to experience issues, please contact support with the error details above.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Client-side Scripts -->
    <script src="~/Views/Shared/scripts.js"></script>
    <script type="text/javascript">
        // Page-specific JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus the primary action button
            const primaryButton = document.querySelector('.btn-primary');
            if (primaryButton) {
                primaryButton.focus();
            }

            // Copy error details to clipboard
            const errorCode = document.querySelector('.error-code');
            if (errorCode) {
                errorCode.addEventListener('click', function() {
                    navigator.clipboard.writeText(errorCode.textContent).then(function() {
                        // Show temporary feedback
                        const originalText = errorCode.textContent;
                        errorCode.textContent = 'Copied!';
                        errorCode.style.backgroundColor = '#d4edda';
                        
                        setTimeout(function() {
                            errorCode.textContent = originalText;
                            errorCode.style.backgroundColor = '#e9ecef';
                        }, 1000);
                    }).catch(function() {
                        // Fallback for older browsers
                        console.log('Copy to clipboard not supported');
                    });
                });
                
                errorCode.style.cursor = 'pointer';
                errorCode.title = 'Click to copy error code';
            }
        });
    </script>
</body>
</html>